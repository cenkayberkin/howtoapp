<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name %></td>
        <td><%= step.description %></td>
        <td><%= link_to "show", list_step_path(step.list,step) %></td>
        <td><%= link_to 'Edit', edit_list_step_path(step.list,step) %></td>
        <td><%= link_to 'Destroy', [step.list,step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_list_step_path  %>
